<%= form_for [:adjust, light] do |f| %>

  <%= f.label :hue %>
  <%= f.number_field :hue %><br>

  <%= f.label :brightness %>
  <%= f.number_field :brightness %><br>

  <%= f.label :color_temperature %>
  <%= f.number_field :color_temperature %><br>

  <%= f.label :saturation %>
  <%= f.number_field :saturation %><br>

  <%= f.submit 'pas licht aan' %>

<% end %>
